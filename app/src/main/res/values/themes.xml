<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyBuilding" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
<!--    <style name="Theme.MyBuilding" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--    @color/pin_reset_color_hint-->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/material_dynamic_primary95</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="errorTextAppearance">@style/TextAppearanceError</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconTint">@color/red</item>
        <item name="boxStrokeErrorColor">@color/red</item>
    </style>
<!--        <item name="android:textColorHint">@color/</item>-->

    <style name="Caption_base">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="HintTextAppearance" parent="Caption_base">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextAppearanceError" parent="Caption_base">
        <item name="android:textColorHint">@color/red</item>
    </style>

    <style name="Subtitle1_base">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="InputEditTextAppearance" parent="Subtitle1_base">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:maxLength">30</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textCursorDrawable">@drawable/bg_gold</item>
    </style>


    <style name="CrownToolbarDefault" parent="Theme.MyBuilding">
        <!--        <item name="android:theme">?attr/actionBarTheme</item>-->
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <!--        <item name="android:textAppearance">@style/H6_high</item>-->
        <!--        <item name="titleTextColor">@color/__text_high</item>-->
        <item name="android:fitsSystemWindows">false</item>
    </style>
</resources>