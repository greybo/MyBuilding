<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/total_bg_color">

    <View
        android:id="@+id/totalItemDivider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toTopOf="@+id/totalItemTitle_2" />

    <TextView
        android:id="@+id/totalItemTitle_1"
        style="@style/Subtitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:gravity="bottom"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/totalItemTitle_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/totalItemTitle_2"
        tools:text="Total: Check" />

    <TextView
        android:id="@+id/totalItemValue_1"
        style="@style/Body_base"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="bottom"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@+id/totalItemTitle_1"
        app:layout_constraintTop_toBottomOf="@+id/totalItemTitle_1"
        tools:text="123.0 uah" />

    <TextView
        android:id="@+id/totalItemTitle_2"
        style="@style/Subtitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:gravity="bottom"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/totalItemTitle_1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Total: Order" />

    <TextView
        android:id="@+id/totalItemValue_2"
        style="@style/Body_base"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="bottom"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/totalItemTitle_2"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintTop_toBottomOf="@+id/totalItemTitle_2"
        tools:text="123.0 uah" />

    <View
        android:id="@+id/totalItemDivider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@+id/totalItemValue_2" />
    <!--        app:layout_constraintStart_toEndOf="@+id/rowItem_Title"-->
</androidx.constraintlayout.widget.ConstraintLayout>