<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <EditText
        android:id="@+id/bottomSheetEditCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:autofillHints="no"
        android:background="@drawable/edit_text_border"
        android:hint="Count"
        android:inputType="numberDecimal"
        android:imeOptions="actionNext"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        android:paddingEnd="4dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toStartOf="@+id/bottomSheetEditPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <EditText
        android:id="@+id/bottomSheetEditPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="no"
        android:background="@drawable/edit_text_border"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        android:imeOptions="actionDone"
        android:paddingEnd="4dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottomSheetEditCount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottomSheetEditCount"
        app:layout_constraintWidth_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>